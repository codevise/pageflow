<%= semantic_form_for current_user, :url => me_admin_users_path, :html => {:class => 'profile'} do |form| %>
  <%= form.inputs :first_name, :last_name %>

  <%= form.inputs  do %>
    <%= form.input :locale,
                   as: :select,
                   include_blank: false,
                   collection: I18n.available_locales.map { |locale| [I18n.t('language', locale: locale), locale.to_s] } %>
  <% end %>

  <%= form.inputs do %>
    <%= form.input :current_password, :hint => t('pageflow.admin.users.me.change_password_hint') %>
    <%= form.input :password %>
    <%= form.input :password_confirmation %>
  <% end %>
  <%= form.actions %>
  <p>
    <%= t('pageflow.admin.users.me.delete_account_hint') %>
    <%= link_to(t('pageflow.admin.users.me.delete_account'), delete_me_admin_users_path, :class => 'delete_account') %>
  </p>
<% end %>
