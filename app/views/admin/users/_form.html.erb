<%= admin_form_for([:admin, resource]) do |f| %>
  <%= f.inputs "Details" do %>
    <%= f.input :email %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :locale,
                as: :select,
                include_blank: false,
                collection: available_locales_collection %>
    <%= f.input :admin if authorized?(:set_admin, current_user) %>
  <% end %>
  <%= f.actions :submit, :cancel %>
<% end %>
