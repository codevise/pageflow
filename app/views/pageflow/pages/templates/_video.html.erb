<div class="blackLayer"></div>
<div class="content_and_background videoPage">
  <div class="page_header">
    <%= render partial: "page_headers", locals: {
      tagline: configuration['tagline'],
      title: configuration['title'],
      subtitle: configuration['subtitle']} %>
    <%= poster_image_tag(configuration['video_file_id'], configuration['poster_image_id'], {:class => "print_image"}) %>
  </div>
  <div class="backgroundArea">
    <div class="videoWrapper">
      <%= video_file_script_tag(configuration['video_file_id'],
                                poster_image_id: configuration['poster_image_id'],
                                mobile_poster_image_id: configuration['mobile_poster_image_id'],
                                unique_id: page.id,
                                preload: page.is_first) %>
    </div>
    <%= shadow_div :opacity => configuration['gradient_opacity'] %>
  </div>
  <div class="content">
    <%= content_tag(:div,
                    class: 'controls',
                    data: {role: 'player_controls', control_bar_text: I18n.t('pageflow.public.start_video')}) do %>

      <span class="hint"><%= t('pageflow.public.video') %></span>
      <%= info_box(configuration) %>
    <% end %>
    <div class="scroller">
      <div>
        <div class="contentWrapper">
          <div class="contentText">
            <p class="non_js_video">
              <%= video_file_non_js_link(entry, configuration['video_file_id']) %>
            </p>
            <p><%= raw configuration['text'] %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
