<%= content_tag(:div,
                id: 'outer_wrapper',
                data: {theme: entry.theme.name},
                class: entry_css_class(entry)) do %>

  <%= render 'pageflow/entries/skip_links' %>

  <h1 class="hidden"><%= entry.title %></h1>

  <section class="print_only">
    <%= image_tag print_logo_path(entry),
      class: "print_image",
      alt: t('pageflow.public.logo') if asset_exists?(print_logo_path(entry)) %>
    <span class="page_url"><%= request.original_url %></span>
  </section>

  <%= content_tag :div, :id => 'content', :class => 'entry', :data => {:role => 'slideshow'} do %>
    <%= render entry.pages, entry: entry %>
    <%= render 'pageflow/entries/indicators', :theme => entry.theme %>
  <% end %>

  <%= render 'pageflow/entries/header', :entry => entry %>
  <%= render 'pageflow/entries/overview', :entry => entry %>
  <%= render_widgets(entry, :scope => widget_scope) %>
<% end %>
